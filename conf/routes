# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                        controllers.Application.index()

# Areas
GET         /areasSearch             controllers.AreaController.areasSearch()
GET         /areasFiltered             controllers.AreaController.areasFiltered()
GET         /areas                   controllers.AreaController.areas()
POST        /areas                   controllers.AreaController.newArea()
POST        /areas/:id/delete        controllers.AreaController.deleteArea(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.at(path="/public", file)
